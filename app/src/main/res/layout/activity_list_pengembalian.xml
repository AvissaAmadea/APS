<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sekre.ListPengembalian"
    android:orientation="vertical"
    android:background="@color/grey">
    <androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="List Pengembalian"
    android:id="@+id/tool"
    app:titleTextColor="@color/white"
    style="@style/Theme.MyApplication"
    android:background="@color/green_pea"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/next"
        android:background="@color/white"
        android:layout_below="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <GridLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1">
            <TextView
                android:id="@+id/verifPinjam"
                android:layout_column="1"
                android:layout_row="0"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:text="Verifikasi Peminjaman"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_arrow_forward_24"/>

        </GridLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pgL"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/next"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pgL"
        android:id="@+id/rcl"
        tools:listitem="@layout/ui_lapor"/>


</RelativeLayout>
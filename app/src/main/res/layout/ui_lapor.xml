<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/kodePinjam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="KodePeminjaman"
                android:textSize="18dp"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/squaretop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_row="0"
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="namaPeminjam"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:id="@+id/aset"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="16dp"
                    android:text="namaAset"
                    />
                <TextView
                    android:textSize="16sp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:id="@+id/keadaanA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="keadaanAset"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/statusPeng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/poppins_bold"
                    android:text="StatusVerif"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    />
            </GridLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
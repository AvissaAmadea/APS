<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/desain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="APS.jepara.co.id"
            android:textAlignment="center"
            android:textColor="@color/black" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="20dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily=""
                    android:text="REGISTRASI"
                    android:textAlignment="center"
                    android:textColor="@color/hijau"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/poppins_bold" />
                <EditText
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_square"
                    android:id="@+id/nama_regist"
                    android:hint="Nama Anda"
                    android:padding="10dp"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />


                <EditText
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_square"
                    android:hint="Username Anda"
                    android:id="@+id/username_regist"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:inputType="textPersonName"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />
                <EditText
                    android:hint="NIP"
                    android:drawableLeft="@drawable/baseline_badge_24"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_square"
                    android:id="@+id/nip_regist"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/asal_dinas_aset_user"
                    android:layout_width="match_parent"
                    android:layout_height ="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rounded_square"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/pg1"/>

                <EditText
                    android:hint="Email"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/email"
                    android:background="@drawable/rounded_square"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />

                <EditText
                    android:drawableRight="@drawable/outline_visibility_off_24"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/baseline_password_24"
                    android:background="@drawable/rounded_square"
                    android:hint="Password"
                    android:id="@+id/password_regist"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />
                <EditText
                    android:drawableRight="@drawable/outline_visibility_off_24"
                    android:background="@drawable/rounded_square"
                    android:drawableLeft="@drawable/baseline_password_24"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:hint="Konfirmasi Password"
                    android:id="@+id/konf_pass"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:inputType="textPassword"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_regist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="12dp"
                    app:cornerRadius="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="DAFTAR"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/to_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/sudah_punya"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>
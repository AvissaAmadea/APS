<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Opd.HomeFragmentOPD"
    android:background="@color/grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardUserOPD"
                android:backgroundTint="@color/hijau"
                android:background="@drawable/square"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Selamat Datang"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:drawableRight="@drawable/baseline_navigate_next_24"
                                    android:padding="5dp"
                                    android:id="@+id/NamaUserOPD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nama User"
                                    android:fontFamily="@font/inter_bold"
                                    android:textSize="16dp"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:padding="5dp"
                                    android:id="@+id/nipUserOPD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="NIP"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="20dp"
                android:background="@color/white"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp">
                <GridLayout
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/cardUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gridLayout"
                    android:rowCount="2"
                    android:columnCount="3">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgAsetMain"
                        app:cardCornerRadius="20dp"
                        android:backgroundTint="#FF6A00"
                        android:elevation="10dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_list_alt_24"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Daftar Aset"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/eden"
                        android:layout_height="100dp"
                        android:id="@+id/imgTransMain"
                        app:cardCornerRadius="20dp"
                        android:elevation="10dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_assignment_turned_in_24"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Transaksi"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgLaporMain"
                        android:backgroundTint="#FF0505"
                        android:layout_gravity="center"
                        app:cardCornerRadius="20dp"
                        android:elevation="10dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_report_24"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Pelaporan"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgRiwayatMain"
                        app:cardCornerRadius="20dp"
                        android:elevation="10dp"
                        android:backgroundTint="#1E6240"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_history_24"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Riwayat"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/settingMain"
                        app:cardCornerRadius="20dp"
                        android:elevation="10dp"
                        android:backgroundTint="#454242"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_setting_24"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Pengaturan"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riwayat Peminjaman"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_peminjamanOPD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                tools:listitem="@layout/ui_list_peminjaman">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
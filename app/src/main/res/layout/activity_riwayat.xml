<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Riwayat"
    android:background="@color/grey">
  <androidx.appcompat.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:title="Riwayat"
      android:id="@+id/tool"
      app:titleTextColor="@color/white"
      style="@style/Theme.MyApplication"
      android:background="@color/green_pea"/>
  <LinearLayout
      android:layout_marginTop="5dp"
      android:id="@+id/next"
      android:background="@color/white"
      android:layout_below="@+id/tool"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_gravity="bottom"
      android:orientation="horizontal">
    <GridLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1">
      <TextView
          android:id="@+id/riw_kem"
          android:layout_column="0"
          android:layout_row="0"
          android:drawablePadding="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="15dp"
          android:layout_gravity="center_vertical"
          android:text="Riwayat Pengembalian"
          android:textColor="@color/black"
          android:drawableLeft="@drawable/baseline_arrow_back_24"/>
      <TextView
          android:layout_column="1"
          android:layout_row="0"
          android:id="@+id/riw_pem"
          android:drawablePadding="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="15dp"
          android:layout_gravity="end"
          android:text="Riwayat Pembayaran"
          android:textColor="@color/black"
          android:drawableRight="@drawable/baseline_arrow_forward_24"/>
    </GridLayout>
  </LinearLayout>

  <ProgressBar
      android:id="@+id/load_riw"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/next"
      android:layout_marginTop="14dp"
      android:visibility="gone" />
  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:listitem="@layout/ui_list_peminjaman"
      android:id="@+id/list_user_riw"
      android:layout_below="@id/load_riw">

  </androidx.recyclerview.widget.RecyclerView>


  </RelativeLayout>